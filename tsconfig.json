{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom", "dom.iterable", "es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "outDir": "./dist",
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts"]
}
